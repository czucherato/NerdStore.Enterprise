@model ErrorViewModel
@{
    ViewData["Title"] = Model?.Titulo ?? "Erro";
}
@{ 
    if (Model == null)
    {
        <div>
            <h2>Ooops! Ocorreu um erro,  mas não se preocupe. Nosso time será avisado e será corrigido em breve!</h2>
        </div>
    }
    else
    {
        <div>
            <h2>@Html.Raw(Model.Mensagem)</h2>
        </div>
    }
}